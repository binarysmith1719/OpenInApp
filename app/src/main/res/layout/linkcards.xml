<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="20dp"
                android:id="@+id/cardimg"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:id="@+id/thumbnail"
                    android:src="@drawable/noimage"
                    android:layout_height="100dp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/llview"
                android:layout_toRightOf="@+id/cardimg"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/title"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="This is the sample title"
                    android:singleLine="true"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/date"
                    android:textStyle="normal"
                    android:text="Date"
                    android:fontFamily="@font/quicksand_regular"
                    android:singleLine="true"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/llview"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="994"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_regular"
                    android:id="@+id/noofclicks"
                    android:textStyle="normal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/clicks"
                    android:textStyle="bold"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="CLICKS"
                    android:singleLine="true"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:id="@+id/link"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/copytoclipboard"
                android:fontFamily="@font/quicksand_bold"
                android:text="https:dsdsdsdsdsdsdsdsdsdsdsdsdsdsdsd/sdsd"/>
            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/copy"
                android:id="@+id/copytoclipboard"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_height="20dp">
            </ImageView>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>